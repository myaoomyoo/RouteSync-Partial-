<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Driver Dashboard - RouteSync</title>
  <link rel="stylesheet" href="/style.css"/>
</head>
<body>
  <div class="app">
    <header>
      <h1>RouteSync â€” Driver Dashboard</h1>
      <a href="/logout">Logout</a>
    </header>

    <aside class="palette">
      <h3>Your Profile</h3>
      <p>Name: <%= user.name %></p>
      <p>Email: <%= user.email %></p>
      <p>Car: <%= user.carName %></p>
      <p>Capacity: <%= user.capacity %></p>
    </aside>

    <main class="main">
      <h2>Assigned Students</h2>
      <div id="studentList">
        <% if (typeof students !== 'undefined' && students.length > 0) { %>
          <% students.forEach(s => { %>
            <div class="pool" style="cursor:default;">
              <p><strong><%= s.name %></strong></p>
              <p>Location: <%= s.location || 'N/A' %></p>
              <button onclick="alert('Calling <%= s.name %>...')">Call</button>
            </div>
          <% }) %>
        <% } else { %>
          <p>No students assigned yet.</p>
        <% } %>
      </div>
    </main>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io({
      query: { userId: "<%= user._id %>" }
    });

    const studentList = document.getElementById('studentList');

    socket.on('new-assignment', ({ students }) => {
      // Clear the "No students" message if it exists
      if (studentList.querySelector('p')) {
        studentList.innerHTML = '';
      }
      studentList.innerHTML += students.map(s => `
        <div class="pool" style="cursor:default;">
          <p><strong>${s.name}</strong></p>
          <p>Location: ${s.location || 'N/A'}</p>
          <button onclick="alert('Calling ${s.name}...')">Call</button>
        </div>
      `).join('');
    });
  </script>
</body>
</html>